@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em
	background: #f9f9f9
.main-cont
	center(1200px,10px)
.main-cont-sm
	center(960px,10px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1

.content--mid
	flex(mid)


@keyframes scale
	from
		transform: scale(1)
	to
		transform: scale(1.5)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 10
	background: $mark
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $gray
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(768px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	max-width 400px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
		margin: 20px auto
	background: white
	position: relative
	padding: 40px 45px
	br(40px)

.modal__show
	max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity

.modal-close
	+below(768px)
		top 12px
		right 12px
	position: absolute
	top: 20px
	right: 20px
	cp()
	size 50px
	br(20px)
	flex(mid)
	z-index 10
	background: #f8f8f8
	&:hover
		.icon
			opacity: 1
	.icon
		tr()
		size 12px
		fill black
		opacity:.3

.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 20px
	text-align: center
	@extend .type--xl
	font-weight: 700

.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto
	//width: 80%
	line-height: 1.6


.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%
// modal === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	bsh()
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

// drop
.dropdown
	width: 100%
	display inline-block
	br(4px)
	tr()
	position relative
	border 1px solid $border-color
	outline none!important
.dropdown-current
	cursor pointer
	display block
	padding 10px
	padding-right 25px
	font-weight: 700
	.icon
		position absolute
		top calc(50% - 6px)
		right 10px
		size 12px
		tr()

.dropdown.active
	border-radius 4px 4px 0 0
	.icon
		transform rotate(180deg)

.dropdown-menu
	position absolute
	background-color #fff
	width calc(100% + 2px)
	left -1px
	margin-top -1px
	border-radius 0 0 4px 4px
	overflow hidden
	display none
	max-height 200px
	overflow-y auto
	z-index 10
	border 1px solid $border-color
.dropdown-menu__el
	padding 10px
	cp()
	tr()
	border-bottom 1px solid $border-color
	//background: #f9f9f9
	&:last-child
		border 0
	&:hover
		background: white
		color black
// drop === end

.section-main
	height 100vh
	color white
	background: rgb(116,113,254);
	background: linear-gradient(145deg, rgba(116,113,254,1) 0%, rgba(79,74,255,1) 100%)
	flex(mid)
	overflow hidden

.section
	padding: 80px 0
.section-clear
	padding-top: 0

.section--mark
	bg-full()
	color white
	position relative
	background-attachment:fixed
	&:before
		content ''
		position absolute
		top 0
		left 0
		width: 100%
		height: 100%
		background: linear-gradient(145deg, rgba(116,113,254,1) 0%, rgba(79,74,255,1) 100%)
		opacity: .95
	.section-title
		color white
.header-wrap
	position: absolute
	width: 100%
	top 0
	left 0

.header
	margin-top: 30px
	flex(between)
.logo
	color white
	@extend .type--lg
	font-weight: 700
.nav
	flex(between)
	width: 50%
	opacity: .8
	font-weight: 700
.nav__el
	color white


.descr-img
	margin: -20% auto 80px auto
	width: 80%
.slogan
	flex(mid)
	fl()

.slogan__title
	font-weight: 700
	font-size: 90px
	margin-bottom: 20px
.slogan__text
	font-weight: 700
	@extend .type--md
	margin-bottom: 30px

.slogan__get
	@extend .btn--md
	@extend .btn--mark

.section-main__icon
	position absolute
	width: 100%
	height: 100%
	left 0
	top 0
	flex(mid)
	overflow hidden
	img
		width: 70%
		opacity: .04
		animation: scale 20s linear infinite
.descr
	f()
	fl()
	align-items center
	margin-bottom: 80px
.descr-text
	max-width 768px
	text-align center

.descr-wrap
	padding-bottom: 20px

.advant
	flex(between)
.advant__el
	flex(mid)
	fl()
.advant__el-icon
	size 120px
	round()
	flex(mid)
	background: $mark
	.icon
		size 80px
		fill white
	margin-bottom: 20px
.advant__el-title
	font-weight: 700
	@extend .type--lg
	margin-bottom: 20px
	color black
.advant__el-text
	width: 80%
	text-align center
	line-height: 1.4
	color $gray

.tools
	flex(between)
	margin-bottom: 80px
	&:nth-child(odd)
		transform translateX(80px)
		.tools__img
			order 2
			box-shadow -20px 20px 30px #e3e3e3

.tools__img
	width: 45%
	br(10px)
	tr()
	cp()
	position relative
	img
		box-shadow 20px 20px 30px #e3e3e3
		position relative
		z-index 10
		br(10px)
	&:hover
		transform scale(1.03)

.tools__info
	width: 45%
	padding: 30px
	background: white
	br(20px)
.tools__title
	font-weight: 700
	margin-bottom: 10px
	@extend .type--lg
	color black

.tools__text
	line-height: 1.6

.section-title
	text-align center
	margin-bottom: 80px
	@extend .type--xl
	font-weight: 700
	color black

.payment
	flex(between)
.payment__el
	width: 30%
	background: white
	padding: 80px 30px
	flex(mid)
	fl()
	text-align center
	br(20px)
.payment__title
	@extend .type--lg
	font-weight: 700
	color black
	margin-bottom: 15px
.payment__descr
	@extend .type--md
	font-weight: 700
	margin-bottom: 20px

.payment__cost
	@extend .type--xl
	font-weight: 700
	color $mark
	margin: 30px 0
	span
		opacity: .6
		font-size: 18px
		display block

.payment__cost-text
	margin-bottom: 20px
	line-height: 1.6
	@extend .type--md
.payment__get
	margin-top: 40px

.why
	column-count 2
	column-gap 60px
	//grid-template-columns: repeat(auto-fill, minmax(12rem,1fr))
	li
		line-height: 1.4
		@extend .type--md
		margin-bottom: 20px

.order
	flex(between)
.order__info
	width: 40%
.order-title
	font-size: 92px
	font-weight: 700
	color black
	margin-bottom: 40px
	line-height: 1
.order-text
	@extend .type--md
	line-height: 1.6
.order-form-el
	position relative
	z-index 5
	padding: 50px 40px
	background: white
	br(20px)
.order__form
	width: 40%
	position relative
.shape
	position absolute
	top -10%
	left -20%
	transform scale(1.4)
	z-index 1

.about
	flex(between)
.about-img
	width: 50%
	flex(mid)
	bg-full()
	position absolute
	top -200px

	img
		width: 85%
.about-wrap
	position relative
.about-info
	width: 45%
	margin-left auto
.about-title
	@extend .type--xl
	font-weight: 700
	color black
	margin-bottom: 30px
.about-list
	li
		margin-bottom: 20px
		line-height: 1.6

.soc-row
	f()
	margin: 30px
.soc-row__el
	round()
	flex(mid)
	tr(all)
	margin-right: 10px
	size 40px
	background: white
	&:hover
		background: $mark
		.icon
			fill white
	.icon
		tr()
		size 18px
		fill $mark

.footer-wrap
	background: linear-gradient(145deg, rgba(79,74,255,1) 0%, rgba(116,113,254,1) 100%)
	color white
	padding: 80px 0
	margin-top: 60px
//.main-cont
.footer
	flex(mid)
	fl()
	a
		color white
.footer-title
	font-size: 92px
	font-weight: 700
	color white
	margin-bottom: 20px
.footer-text
	@extend .type--lg
	text-align center
	margin-bottom: 30px
	line-height: 1.4
	opacity: .8
.footer-phone
	display inline-block
	@extend .type--md
	margin-bottom: 10px
.footer-mail
	display inline-block
	margin-bottom: 20px

